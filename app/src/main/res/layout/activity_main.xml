<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        tools:context=".view.activity.MainActivity">

        <TextView
            android:id="@+id/main_hello_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_padding"
            android:text="@string/main_hello_text"
            android:textSize="@dimen/big_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/main_lyrics_button"
            android:layout_width="@dimen/main_button_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:background="@drawable/cornered_background"
            android:minHeight="@dimen/main_button_height"
            android:text="@string/main_lyrics_button"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/main_search_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_hello_text" />

        <Button
            android:id="@+id/main_search_button"
            android:layout_width="@dimen/main_button_width"
            android:layout_height="wrap_content"
            android:background="@drawable/cornered_background"
            android:minHeight="@dimen/main_button_height"
            android:text="@string/main_search_button"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/main_lyrics_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/main_lyrics_button"
            app:layout_constraintTop_toTopOf="@+id/main_lyrics_button" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
